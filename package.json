    "postinstall": "set NODE_OPTIONS=--openssl-legacy-provider && electron-builder install-app-deps",
    "postuninstall": "set NODE_OPTIONS=--openssl-legacy-provider && electron-builder install-app-deps"
  },
  "main": "background.js",
  "dependencies": {
    "core-js": "^3.33.2",
    "element-plus": "^2.4.2",
    "monaco-editor": "^0.44.0",
    "monaco-editor-webpack-plugin": "^7.1.0",
    "nice-monaco-tree": "^1.0.7",
    "remixicon": "^3.5.0",
    "split-pane-v3": "^1.1.2",
    "vue": "^3.3.8",
    "vue-i18n": "^9.6.5",
    "vue-router": "^4.2.5",
    "vue-tabs-chrome": "^0.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/eslint-parser": "^7.22.15",
    "@vue/cli-plugin-babel": "~5.0.8",
    "@vue/cli-plugin-eslint": "~5.0.8",
    "@vue/cli-service": "~5.0.8",
    "electron": "^13.6.9",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^7.32.0",
